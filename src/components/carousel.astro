---
import "../style/components/swiper.css";
import {
  Swiper,
  SwiperWrapper,
  SwiperSlide,
  SwiperButtonPrev,
  SwiperButtonNext,
} from "astro-swiper";

const images = [
  "/assets/img/chambre.jpg",
  "/assets/img/cover.jpeg",
  "/assets/img/jacuzzi.jpeg",
  "/assets/img/outdoor.jpg",
  "/assets/img/salon.jpeg",
  "/assets/img/tableau.jpeg",
];
---

<Swiper
  uniqueClass="myswiper-main"
  linkToThumbUniqueClass="myswiper-thumbnail"
  options={{
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    loop: true,
  }}
>
  <SwiperWrapper>
    {
      images.map((image) => (
        <SwiperSlide>
          <img src={image} alt="" />
        </SwiperSlide>
      ))
    }
  </SwiperWrapper>

  <SwiperButtonPrev />
  <SwiperButtonNext />
</Swiper>

<Swiper
  uniqueClass="myswiper-thumbnail"
  options={{
    // check options at https://swiperjs.com/swiper-api
    spaceBetween: 10,
    slidesPerView: 4,
    freeMode: true,
    watchSlidesProgress: true,
    loop: true,
  }}
>
  <SwiperWrapper>
    {
      images.map((image) => (
        <SwiperSlide>
          <img src={image} alt="" />
        </SwiperSlide>
      ))
    }
  </SwiperWrapper>
</Swiper>
