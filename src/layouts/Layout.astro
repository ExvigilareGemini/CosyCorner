---
const description =
  "Découvrez nos services de location. Tarifs compétitifs et formules flexibles.";
---

<!doctype html>
<html lang="en">
  <head>
    <meta
      http-equiv="Content-Security-Policy"
      content="default-src 'self'; 
                 script-src 'self' 'unsafe-inline'; 
                 style-src 'self' 'unsafe-inline' fonts.googleapis.com; 
                 font-src 'self' fonts.gstatic.com data:; 
                 img-src 'self' data: https: blob:; 
                 connect-src 'self'; 
                 object-src 'none'; 
                 base-uri 'self'; 
                 form-action 'self';"
    />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=1" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=1" />
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=1" />
    
    <!-- Preload font -->
    <link rel="preload" href="/fonts/garamond.ttf" as="font" type="font/ttf" crossorigin />
    
    <!-- Inline critical global styles -->
<style is:global lang="scss">
  @use "../style/variables" as *;
  @use "../style/mixins" as *;

  @font-face {
    font-family: "Garamond";
    src: url("/fonts/garamond.ttf") format("truetype"), 
         url('/fonts/eb-garamond-regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  body {
    margin: 0;
    max-width: 100%;
  }

  .main {
    font-family: "Garamond", sans-serif;
    margin: 0;
    width: 100vw;
    overflow-x: hidden;
    color: $secondaryColor;
    background-color: $bgColor;
    @include for-desktop-up {
      font-size: 1.5rem;
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>
    
    <title>Cosy Corner</title>
    <meta name="description" content={description} />
    <meta property="og:description" content={description} />

      <meta property="og:title" content="Cosy Corner" />
  <meta property="og:description" content={description} />
  <meta property="og:image" content="https://cosycornerwaterloo.be/og-image.webp" />
  <meta property="og:type" content="website" />
  <meta property="og:url" content="https://cosycornerwaterloo.be" />

    <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content="Cosy Corner" />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content="https://cosycornerwaterloo.be/og-image.webp" />

  </head>
  <body>
    <slot />
  </body>
</html>